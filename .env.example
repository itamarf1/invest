# Investment System Environment Variables

# News & Sentiment API Keys (optional - free RSS feeds used by default)
# ALPHA_VANTAGE_API_KEY=your_key_here
# NEWS_API_KEY=your_key_here

# Paper Trading API Keys (required for paper trading)
# ALPACA_API_KEY=your_key_here
# ALPACA_SECRET_KEY=your_secret_here
# ALPACA_PAPER=true  # Set to true for paper trading

# Database (when implemented)
# DATABASE_URL=postgresql://user:password@localhost/invest_db

# Logging
LOG_LEVEL=INFO

# Risk Management
MAX_POSITION_SIZE=0.05  # 5% of portfolio per position
STOP_LOSS_PCT=0.02      # 2% stop loss
MAX_DAILY_LOSS=0.05     # 5% max daily loss
MIN_CASH_BALANCE=1000   # Minimum cash to keep in account

# Trading Configuration
ENABLE_AUTO_TRADING=false  # Set to true to enable automated trading
TRADING_HOURS_ONLY=true   # Only trade during market hours
PAPER_TRADING_BALANCE=100000  # Starting paper trading balance